{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "#mealz/backend-core": ["src/core"],
      "#mealz/backend-common": ["src/common"],
      "#mealz/backend-api": ["src/api"],
      "#mealz/backend-gateway-core": ["src/gateway/core"],
      "#mealz/backend-gateway-common": ["src/gateway/common"],
      "#mealz/backend-logger": ["src/logger"],
      "#mealz/backend-db": ["src/db"],
      "#mealz/backend-transport": ["src/transport"],

      "#mealz/backend-users-common": ["src/domains/users/common"],
      "#mealz/backend-users-db": ["src/domains/users/db"],
      "#mealz/backend-users-auth-service-api": ["src/domains/users/services/auth/service-api"],
      "#mealz/backend-users-auth-gateway-api": ["src/domains/users/services/auth/gateway-api"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
