    "@nestjs/platform-express": "^11.1.2",
    "@nestjs/platform-fastify": "^11.1.3",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.2.0",
    "ansi-colors": "^4.1.3",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "copyfiles": "^2.4.1",
